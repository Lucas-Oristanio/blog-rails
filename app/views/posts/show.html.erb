<p style="color: green"><%= notice %></p>

<%= render @post %>

<div style="width: 500px;display: flex; justify-content: space-around;">
  <%= link_to "Editar", edit_post_path(@post), "class": "btn btn-primary" %> |
  <%= link_to "Voltar", posts_path, "class": "btn btn-warning"%>|

  <%= button_to "Deletar post", @post, method: :delete, "class": "btn btn-danger" %>
</div>
